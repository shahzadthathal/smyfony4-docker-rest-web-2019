{% extends 'AdminBundle::layout.html.twig' %}

{% block body %}

	<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Create Blog</h1>


        {{ form_start(form) }}

        {{ form_row(form._token) }}

        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}


    	<div class="form-group">
	        {{ form_label(form.blogCat, 'Category') }}
	        {{ form_errors(form.blogCat) }}
	        {{ form_widget(form.blogCat, {'attr': {'class': 'form-control'}}) }}
    	</div>
        

        <div class="form-group">
	        {{ form_label(form.title, 'Title') }}
	        {{ form_errors(form.title) }}
	        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    	</div>

    	<div class="form-group">
	        {{ form_label(form.status, 'Status') }}
	        {{ form_errors(form.status) }}
	        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
    	</div>

        <div class="form-group">
            {{ form_label(form.author, 'Author') }}
            {{ form_errors(form.author) }}
            {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.tags, 'Tags') }}
            {{ form_errors(form.tags) }}
            {{ form_widget(form.tags, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.file) }}
            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        </div>  

         {{ form_end(form) }}

    </div>

{% endblock %}